{% for type in ['text', 'email', 'search', 'date'] %}
  <div style="
    display: grid;
    grid-gap: 1em;
    grid-template-columns: 1fr min-content;
    white-space: nowrap;
    margin-bottom: 1em;
    ">
    <div><input class="c-input" type="{{type}}" value="{{type | capitalize}}"></div>
    <div>{% include '../../button/button.twig' %}</div>
  </div>
{% endfor %}

