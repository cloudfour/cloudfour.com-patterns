{% set tag_name = tag_name|default('div') %}

<{{ tag_name }}
  class="o-rhythm
    {% if amount %}o-rhythm--{{amount}}{% endif %}
    {% if heading_amount %}o-rhythm--{{heading_amount}}-headings{% endif %}
    {% if class %}{{ class }}{% endif %}">
  {% block content %}
  {% endblock %}
</{{ tag_name }}>
