<form
  class="c-comment-form{% if class %} {{class}}{% endif %}"
  {%- if action %}action="{{ action }}"{% endif -%}
  {%- if method %}method="{{ method }}"{% endif -%}
>
  <h2>Leave a Comment</h2>
  <p>{% block prompt %}Please be kind, courteous and constructive. You may use simple HTML or <a href="https://en.support.wordpress.com/markdown-quick-reference">Markdown</a> in your comments. All fields are required.{% endblock %}</p>
  {% include '@cloudfour/components/input/input.twig' with { type: 'textarea', name: 'comment', required: true, label: 'Message', class: 'c-input--elastic js-elastic-textarea' } only %}
  {% if logged_in_user and log_out_url %}
    <p>Logged in as <a href="{{ logged_in_user.link() }}">{{ logged_in_user.name() }}</a>. <a href="{{ log_out_url }}">Log out?</a></p>
  {% else %}
    {% include '@cloudfour/components/input/input.twig' with { name: 'author', autocomplete: 'name', required: true, label: 'Name', label_class: 'c-comment-form__name' } only %}
    {% include '@cloudfour/components/input/input.twig' with { type: 'email', autocomplete: 'home email', required: true, label: 'Email', label_class: 'c-comment-form__email' } only %}
  {% endif %}
  <label class="c-comment-form__subscribe">
    {% include '@cloudfour/components/checkbox/checkbox.twig' with { name: 'subscribe_comments' } only %}
    Notify me of follow-up comments by email.
  </label>
  {% if is_reply %}
    <div class="c-comment-form__reply-buttons">
      {% include '@cloudfour/components/button/button.twig' with { label: 'Submit Reply' } only %}
      {% include '@cloudfour/components/button/button.twig' with { label: 'Cancel', class: 'c-button--secondary' } only %}
    </div>
  {% else %}
    {% include '@cloudfour/components/button/button.twig' with { label: 'Submit Comment' } only %}
  {% endif %}
</div>
