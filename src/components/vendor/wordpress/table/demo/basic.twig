{% set _figureClass = '' %}

{% if not isStriped %}
  {% set _figureClass = _figureClass ~ ' is-style-regular' %}
{% endif %}

{% if isStriped %}
  {% set _figureClass = _figureClass ~ ' is-style-striped' %}
{% endif %}

{% set _tableClass = '' %}

{% if hasFixedLayout %}
  {% set _tableClass = _tableClass ~ ' has-fixed-layout' %}
{% endif %}

{% embed '../table.twig' with {
    tableClass: _tableClass,
    figureClass: _figureClass
  }
%}

  {% if hasHeader %}
    {% block header %}
      <tr>
        {% for heading in tableData.headings %}
          <th{% if loop.index0 == 0 %} scope="col"{% endif %}{% if numericData %} class="has-text-aligned-right"{%endif%}>{{heading}}</th>
        {% endfor %}
      </tr>
    {% endblock %}
  {% endif %}

  {% block body %}
    {% for row in tableData.rows %}
      <tr>
        <th scope="row"{% if numericData %} class="has-text-aligned-right"{%endif%}>
          <a href="https://github.com/cloudfour/{{row.name}}">{{row.name}}</a>
        </th>
        <td{% if numericData %} class="has-text-aligned-right"{%endif%}>
          <a href="https://github.com/cloudfour/{{row.name}}/stargazers">{{row.stargazers}}</a>
        </td>
        <td{% if numericData %} class="has-text-aligned-right"{%endif%}>
          <a href="https://github.com/cloudfour/{{row.name}}/network/members">{{row.forks}}</a>
        </td>
        <td{% if numericData %} class="has-text-aligned-right"{%endif%}>{{row.followers}}</td>
        <td{% if numericData %} class="has-text-aligned-right"{%endif%}>
          <a href="https://github.com/cloudfour/{{row.name}}/issues">{{row.issues}}</a>
        </td>
      </tr>
    {% endfor %}
  {% endblock %}

  {% if hasFooter %}
    {% block footer %}
      <tr>
        {% for footer_cell in tableData.footer_cells %}
          <th{% if loop.index0 == 0 %} scope="row"{% endif %}{% if numericData %} class="has-text-aligned-right"{%endif%}>{{footer_cell}}</th>
        {% endfor %}
      </tr>
    {% endblock %}
  {% endif %}
{% endembed %}
