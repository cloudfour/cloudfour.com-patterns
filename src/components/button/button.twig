{% set tag_name = tag_name | default(href ? 'a' : 'button') %}

<{{tag_name}}
  class="c-button{% if class %} {{class}}{% endif %}"
  {% if aria_expanded %}
    aria-expanded="{{aria_expanded}}"
  {% endif %}
  {% if tag_name == 'a' %}
    href="{{href|default('#')}}"
  {% elseif tag_name == 'button' %}
    type="{{type|default('button')}}"
    {% if disabled %}
      disabled
    {% endif %}
  {% endif %}
>
  {% block icon_start %}
    {% if icon_start %}
      {% include '@cloudfour/components/icon/icon.twig' with {
        name: icon_start,
        inline: true
      } %}
    {% endif %}
  {% endblock %}
  {% block content %}
    {{label | default('Hello world')}}
  {% endblock %}
  {% block icon_end %}
    {% if icon_end %}
      {% include '@cloudfour/components/icon/icon.twig' with {
        name: icon_end,
        inline: true
      } %}
    {% endif %}
  {% endblock %}
</{{tag_name}}>
