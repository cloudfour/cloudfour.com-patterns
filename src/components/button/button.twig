{% set tagName = tagName|default(href ? 'a' : 'button') %}

<{{ tagName }}
  class="c-button{% if class %} {{ class }}{% endif %}"
  {% if ariaExpanded %}
    aria-expanded="{{ ariaExpanded }}"
  {% endif %}
  {% if aria_pressed %}
    aria-pressed="{{ aria_pressed }}"
  {% endif %}
  {% if tagName == 'a' %}
    href="{{ href|default('#') }}"
  {% elseif tagName == 'button' %}
    type="{{ type|default('button') }}"
    {% if disabled %}
      disabled
    {% endif %}
  {% endif %}
>
  {% block content_start %}
    {% if content_start_icon %}
      <span class="c-button__effect">
        {% include '@cloudfour/components/icon/icon.twig' with {
          name: content_start_icon,
          inline: true
        } %}
      </span>
    {% endif %}
  {% endblock %}
  {% block content %}
    {{ label|default('Hello world') }}
  {% endblock %}
  {% block content_end %}
    {% if content_end_icon %}
      {% include '@cloudfour/components/icon/icon.twig' with {
        name: content_end_icon,
        inline: true
      } %}
    {% endif %}
  {% endblock %}
</{{ tagName }}>
