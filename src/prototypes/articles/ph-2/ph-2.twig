<div id="ph-prototype-articles-example-2">
  <div class="hero t-dark">
    <h1>Articles</h1>
    <p class="subtitle">
      Tales from the edge of the web
    </p>
  </div>

  <div class="content">
    <div class="listings">
      {% for article in feed.items %}
        <article class="card">
          {% if article.image %}
            <img src="{{article.image}}" alt="" class="card__preview">
          {% endif %}

          <div class="card__body">
            <header>
              <h2>
                <a href="{{article.url}}" class="card__primary-action">
                  {{article.title}}
                </a>
              </h2>
            </header>

            <p class="card__content">
              {{article.summary}}
            </p>

            <footer class="card__footer">
              <a class="author card__secondary-action" href="{{article.author.url}}">
                <img src="{{article.author.avatar}}" alt="" class="author__photo"
                style="
                  --border-radius-val-1: calc(35% + {{ random(30) }}%);
                  --border-radius-val-2: calc(35% + {{ random(30) }}%);
                  --border-radius-val-3: calc(35% + {{ random(30) }}%);
                  --border-radius-val-4: calc(35% + {{ random(30) }}%);
                  --border-radius-val-5: calc(35% + {{ random(30) }}%);
                  --border-radius-val-6: calc(35% + {{ random(30) }}%);
                  --border-radius-val-7: calc(35% + {{ random(30) }}%);
                  --border-radius-val-8: calc(35% + {{ random(30) }}%);
                  {# --rotation: calc(-10deg + {{ random(20) }}deg); #}
                ">

                <span>
                  {{article.author.name}}
                </span>
              </a>
              <p class="date">
                {{article.date_published|replace({'Z': ''})|date('F j, Y')}}
              </p>
            </footer>
          </div>
        </article>
      {% endfor %}
      </div>
  </div>
</div>
