{% set tagName = tagName | default(href ? 'a' : 'button') %}

<{{tagName}}
  class="c-button{% if class %} {{class}}{% endif %}"
  {% if ariaExpanded %}
    aria-expanded="{{ariaExpanded}}"
  {% endif %}
  {% if tagName == 'a' %}
    href="{{href|default('#')}}"
  {% elseif tagName == 'button' %}
    type="{{type|default('button')}}"
    {% if disabled %}
      disabled
    {% endif %}
  {% endif %}
>
  {% block icon_start %}
    {% if icon_start %}
      {% include '@cloudfour/components/icon/icon.twig' with {
        name: icon_start,
        inline: true
      } %}
    {% endif %}
  {% endblock %}
  {% block content %}
    {{label | default('Hello world')}}
  {% endblock %}
  {% block icon_end %}
    {% if icon_end %}
      {% include '@cloudfour/components/icon/icon.twig' with {
        name: icon_end,
        inline: true
      } %}
    {% endif %}
  {% endblock %}
</{{tagName}}>
