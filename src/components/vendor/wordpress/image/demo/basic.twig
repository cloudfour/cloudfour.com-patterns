{% set _classList = '' %}

{% if isLarge %}
  {% set _classList = _classList ~ ' size-large' %}
{% endif %}

{% embed '../image.twig' with { classList: _classList } %}
  {# The src block is a valid image URL #}
  {% if imgUrl %}
    {% block src %}{{imgUrl}}{% endblock %}
  {% endif %}
  {# The alt block is a text node #}
  {% block alt %}{{altText}}{% endblock %}
  {# The figcaption block is a text node #}
  {% block figcaption %}{{figcaptionContent}}{% endblock %}
{% endembed %}
