{% set tag_name = tag_name | default('div') %}

<{{ tag_name }} class="c-message{% if class %} {{ class }}{% endif %}">
  <div class="c-message__content">
    {% block content %}
      <p>
        {{ label|default('Hi, I\'m a message!') }}
      </p>
    {% endblock %}
  </div>
  {% if include_close %}
    <button class="c-message__close" type="button">
      {% include '@cloudfour/components/icon/icon.twig' with {
        name: 'x',
        class: 'c-message__close-icon',
        aria_hidden: true
      } %}
      <span class="u-hidden-visually">Close the notification</span>
    </button>
  {% endif %}
</{{ tag_name }}>
