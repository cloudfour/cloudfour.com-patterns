{% if rightAlignRowHeadings %}
  {% set alignmentClass = ' c-table--tighten-row-headings' %}
{% endif %}

{% embed '../table.twig' with { tableClass: rowModifier ~ alignmentClass } %}

  {% if hasHeader %}
    {% block header %}
      <tr>
        <th></th>
        <th scope="col">Stars</th>
        <th scope="col">Forks</th>
        <th scope="col">Watchers</th>
        <th scope="col">Issues</th>
      </tr>
    {% endblock %}
  {% endif %}

  {% block body %}
    {% for row in tableData %}
      <tr>
        <th scope="row">
          <a href="https://github.com/cloudfour/{{row.name}}">{{row.name}}</a>
        </th>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>
          <a href="https://github.com/cloudfour/{{row.name}}/stargazers">{{row.stargazers}}</a>
        </td>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>
          <a href="https://github.com/cloudfour/{{row.name}}/network/members">{{row.forks}}</a>
        </td>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>{{row.followers}}</td>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>
          <a href="https://github.com/cloudfour/{{row.name}}/issues">{{row.issues}}</a>
        </td>
      </tr>
    {% endfor %}
  {% endblock %}

  {% if hasFooter %}
    {% block footer %}
      <tr>
        <th scope="row">Total:</th>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>2125</td>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>234</td>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>2125</td>
        <td {% if numericCells %}class="c-table__numeric-cell"{% endif %}>245</td>
      </tr>
    {% endblock %}
  {% endif %}
{% endembed %}
