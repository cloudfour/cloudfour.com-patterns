{% set tag_name = tag_name|default(href ? 'a' : 'button') %}
{# Set a default icon if aria-pressed is set and no icon was supplied #}
{% if aria_pressed and content_start_icon is empty and content_end_icon is empty %}
  {% set content_start_icon = 'notifications' %}
{% endif %}

<{{ tag_name }}
  class="c-button{% if class %} {{ class }}{% endif %}"
  {% if aria_expanded %}
    aria-expanded="{{ aria_expanded }}"
  {% endif %}
  {% if aria_pressed %}
    aria-pressed="{{ aria_pressed }}"
  {% endif %}
  {% if tag_name == 'a' %}
    href="{{ href|default('#') }}"
  {% elseif tag_name == 'button' %}
    type="{{ type|default('button') }}"
    {% if disabled %}
      disabled
    {% endif %}
  {% endif %}
>
  <span class="c-button__effect">
    {% block content_start %}
      {% if content_start_icon %}
        {% include '@cloudfour/components/icon/icon.twig' with {
          name: content_start_icon,
          inline: true
        } only %}
      {% endif %}
    {% endblock %}
  </span>
  {% block content %}
    {{ label|default('Hello world') }}
  {% endblock %}
  <span class="c-button__effect">
    {% block content_end %}
      {% if content_end_icon %}
        {% include '@cloudfour/components/icon/icon.twig' with {
          name: content_end_icon,
          inline: true
        } only %}
      {% endif %}
    {% endblock %}
  </span>
</{{ tag_name }}>
