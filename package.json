{
  "name": "cloudfour.com-patterns",
  "version": "0.1.0",
  "private": true,
  "author": "Cloud Four",
  "description": "Front-end patterns for cloudfour.com",
  "homepage": "https://github.com/cloudfour/cloudfour.com-patterns",
  "license": "MIT",
  "keywords": [
    "pattern",
    "styleguide",
    "component",
    "framework",
    "boilerplate",
    "html",
    "ui",
    "css",
    "bem",
    "typography"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudfour/cloudfour.com-patterns.git"
  },
  "dependencies": {
    "focus-visible": "5.0.2",
    "prismjs": "1.19.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@cloudfour/eslint-plugin": "9.0.0",
    "@storybook/addon-a11y": "5.3.18",
    "@storybook/addon-docs": "5.3.18",
    "@storybook/addon-knobs": "5.3.18",
    "@storybook/addon-viewport": "5.3.18",
    "@storybook/html": "5.3.18",
    "@storybook/preset-scss": "1.0.2",
    "@svgr/webpack": "5.3.0",
    "babel-loader": "8.1.0",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-plugin-mdx": "1.6.8",
    "eslint-plugin-react": "7.19.0",
    "gulp": "4.0.2",
    "gulp-rename": "2.0.0",
    "gulp-svgmin": "2.2.0",
    "gulp-theo": "2.0.1",
    "js-yaml": "3.13.1",
    "lodash": "4.17.15",
    "ltx": "2.9.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.2",
    "remark-preset-lint-recommended": "4.0.0",
    "remark-preset-prettier": "0.4.0",
    "require-dir": "1.2.0",
    "sass": "1.26.3",
    "sass-loader": "8.0.2",
    "storybook-addon-paddings": "2.0.2",
    "storybook-addon-themes": "5.4.1",
    "style-loader": "1.1.3",
    "stylelint": "13.2.1",
    "stylelint-config-cloudfour": "3.1.2",
    "stylelint-config-prettier": "8.0.1",
    "theo": "8.1.5",
    "through2": "3.0.1",
    "twig": "1.15.0",
    "twigjs-loader": "1.0.1"
  },
  "scripts": {
    "storybook": "npm run preprocess && run-p watch-preprocess start-storybook",
    "start-storybook": "start-storybook -p 6006 -s static",
    "build-storybook": "npm run preprocess && build-storybook -s static",
    "preprocess": "run-p preprocess:*",
    "preprocess:svg-to-twig": "gulp svg-to-twig",
    "preprocess:theo-to-mdx": "gulp theo-to-mdx",
    "watch-preprocess": "gulp watch",
    "check-lint": "run-s check-lint:*",
    "check-lint:prettier": "prettier --ignore-path .gitignore --list-different '**/*.{scss,js,mdx}'",
    "check-lint:css": "stylelint --ignore-path .gitignore '**/*.scss'",
    "check-lint:js": "eslint --ignore-path .gitignore '**/*.{js,mdx}'",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --ignore-path .gitignore --write '**/*.{scss,js,mdx}'",
    "lint:css": "stylelint --ignore-path .gitignore --fix '**/*.scss'",
    "lint:js": "eslint --ignore-path .gitignore --fix '**/*.{js,mdx}'"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@cloudfour/recommended",
      "plugin:mdx/recommended"
    ],
    "globals": {
      "Prism": true
    },
    "plugins": [
      "react"
    ],
    "settings": {
      "node": {
        "allowModules": [
          "@storybook/addon-docs",
          "@storybook/addon-knobs",
          "@storybook/client-api"
        ]
      }
    },
    "rules": {
      "padding-line-between-statements": "off",
      "react/jsx-uses-vars": "error"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
